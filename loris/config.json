{
  "note": "This file contains the application defaults. Removing keys will cause errors.",
  "server_uri": null,
  "max_area": 16000000,
  "max_width": null,
  "max_height": null,
  "scale_factors": {
    "note": "Only applicable if regionByPx and sizeByW are disabled",
    "jp2": { "encoded_only": false },
    "other_formats" : {
      "note": "tiles will be allowed for scale factors > the tile size, and sizes will be available for scale factors <= the tile size",
      "enabled": false,
      "tile_width": 1024,
      "tile_height": 1024
    }
  },
  "iiif_features": {
    "note": "Loris will always be at least level 0 compliant. Enable additional features here.",
    "region": {
      "regionByPx": { "enabled": true },
      "regionByPct": { "enabled": true },
      "regionSquare": { "enabled": true }
    },
    "size": {
      "sizeByW": { "enabled": true },
      "sizeByH": { "enabled": true },
      "sizeByPct": { "enabled": true },
      "sizeByConfinedWh": { "enabled": true },
      "sizeByDistortedWh": { "enabled": true },
      "sizeByWh": { "enabled": true },
      "sizeAboveFull": { "enabled": true },
      "max": { "enabled": true }
    },
    "rotation": {
      "rotationBy90s": { "enabled": true },
      "rotationArbitrary": { "enabled": true },
      "mirroring": { "enabled": true },
      "color": { "enabled": true }
    },
    "quality": {
      "color": { "enabled": true },
      "gray": { "enabled": true },
      "bitonal": { "enabled": true }
    },
    "formats": {
      "png": { "enabled": true },
      "webp": { "enabled": true }
    },
    "http": {
      "baseUriRedirect": { "enabled": true },
      "cors": { "enabled": true },
      "jsonldMediaType": { "enabled": true },
      "profileLinkHeader": { "enabled": true },
      "canonicalLinkHeader": { "enabled": true }
    }
  },
  "logging": {
    "handlers": {
      "default": {
        "formatter": "standard",
        "class": "logging.StreamHandler",
        "level": "DEBUG"
      }
    },
    "loggers": {
      "loris": {
        "level": "DEBUG",
        "propagate": false,
        "handlers": ["default"]
      }
    },
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "standard": {
        "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
      }
    }
  }
}
